<html>
  <head>
    <title><%= @title %> | TaskwarriorWeb</title>

    <!-- Styles -->
    <% ['bootstrap.min', 'datepicker', 'styles'].each do |file| %>
      <link rel="stylesheet" href="<%= url("/css/#{file}.css") %>">
    <% end %>

    <!-- Scripts -->
    <% ['jquery.min', 'bootstrap', 'bootstrap-datepicker', 'jquery.hotkeys', 'application'].each do |file| %>
      <script text="text/javascript" src="<%= url("/js/#{file}.js") %>"></script>
    <% end %>
  </head>

  <body data-spy="scroll" data-offset="60" data-target="#sidebar">
    <div id="wrap">
      <div id="page" class="container">
        <%= erb :_topbar %>
        <%= erb :_subnav %>
        <section class="content">
          <%= erb :_flash %>
          <%= yield %>
        </section>
      </div>
      <div id="push"></div>
    </div>
    <div id="footer">
      <div class="container muted">
        <div class="pull-left">
          <p>TaskwarriorWeb <%= TaskwarriorWeb::VERSION %></p>
        </div>
        <div class="pull-right">
          <p><a href="http://github.com/theunraveler/taskwarrior-web/issues">Report a bug</a></p>
        </div>
      </div>
    </div>
    <%= erb :_hotkeys %>
  </body>
</html>
